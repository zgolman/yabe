<br>
<div class="sand-clock-auction"></div>
<div class="whole">
  <div class="auction_index_container">
    <%= @current_user %>
   
    <div class="whole-left">
      <div class="img-left">
        
      </div>    
    </div>
    <div class="whole-right">
      <div class="img-right">
       
      </div>
    </div> 
  </div>
  <br>
  <br>
  <br>
  <br>   

      <div class="index_title"> 
        <h1 id="index_title">LIVE AUCTIONS</h1>
      </div>  
  <br>
  <br>
        
      
        <% @auctions.each do |j| %>
           <div class="thumbs">
            <img src = "http://www.clipartbest.com/cliparts/eTM/dzG/eTMdzGRrc.png" width="20" height="20"> <%= j.amount %><br>
            <img src = "http://upload.wikimedia.org/wikipedia/commons/thumb/b/b6/Astronomical_symbol_for_star.svg/120px-Astronomical_symbol_for_star.svg.png"width="20" height="20"><%= j.category %><br>
            <img src = "http://images.clipartpanda.com/alarm-clock-png-orologio_clock_alarm_icon-1331px.png" width="20" height="20">
            <!-- Check if auction time is over -->
            <% if @timeleft[j.id-1][:unix_time] > 0 %>
              <%= @timeleft[j.id-1][:hours] %> hours <%= @timeleft[j.id-1][:minutes] %> minutes <%= @timeleft[j.id-1][:seconds] %> seconds <br>
            <% else %>
              Auction is Over!
            <% end %>
            <%= button_to "View this Auction!", auction_path(j), :method => :get %><br>
            <br>
            </div>
            <% end %>

        </div>
          

        
   
</div>






